block content
    link(href='..\public\libs\bootstrap\dist\css\bootstrap-theme.min.css', rel='stylesheet')
    style.
      .box{
      width: 900px;
      height: 550px;
      position: absolute;
      right: 235px;
      top: 220px;
      }
      .title2 {
      position: absolute;
      right: 600px;
      top: -90px;
      }
  body
    .container-fluid.mainLogo
      .container
        .col-md-8.col-xs-0
          .col-md-3.col-xs-4
            img.img-responsive(src='/imgs/logo.png')
          .col-md-9.col-xs-8
            h3.text-left.title 武汉轻工大学素质学分管理系统
        .col-md-4.col-xs-0
          img.img-responsive.gif(src='/imgs/xiaoxun.gif')
