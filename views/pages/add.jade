      br
      .input-group.input-group-lg
        span#sizing-addon2.input-group-addon 项目分类
        input.form-control(type='text', placeholder='item_class', aria-describedby='sizing-addon2')
      br
      .input-group.input-group-lg
        span#sizing-addon2.input-group-addon 项目名
        input.form-control(type='text', placeholder='item_name', aria-describedby='sizing-addon2')
      br
      .input-group.input-group-lg
        span#sizing-addon2.input-group-addon 申请分值
        input.form-control(type='text', placeholder='apply_value', aria-describedby='sizing-addon2')
      br
      .input-group.input-group-lg
        span#sizing-addon2.input-group-addon 备注
        input.form-control(type='text', placeholder='remarks', aria-describedby='sizing-addon2')
